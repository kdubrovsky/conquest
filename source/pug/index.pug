doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect" href="https://fonts.googleapis.com") 
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin) 
        link(href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Prata&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet")
        link(rel="stylesheet", href="./css/main.css")
        title Conquest Watch Store | Russia
    body
        header.header 
            .content-zone 
                .header__wrapper
                    .header__logo
                        a(href="#")
                            img(src="./img/logo-header.svg", alt="Conquest logo")
                    nav.main-menu 
                        ul.main-menu__list 
                            li.main-menu__item
                                a.main-menu__link(href="#") Каталог
                            li.main-menu__item
                                a.main-menu__link(href="#") Акции
                            li.main-menu__item
                                a.main-menu__link(href="#") Доставка
                            li.main-menu__item
                                a.main-menu__link(href="#") Контакты
                    ul.toolbar 
                        li.toolbar__item 
                            a.toolbar__link(href="#")
                                svg.toolbar__icon
                                    use(xlink:href="./icons/icons.svg#search")
                        li.toolbar__item 
                            a.toolbar__link(href="#")
                                svg.toolbar__icon
                                    use(xlink:href="./icons/icons.svg#favorites")
                        li.toolbar__item
                            a.toolbar__link(href="#")
                                svg.toolbar__icon
                                    use(xlink:href="./icons/icons.svg#cart")
        section.hero 
            .content-zone
                .hero__wrapper 
        section.popular 
            .content-zone
                .popular__wrapper 
        section.quality 
            .content-zone
                .quality__wrapper 
        section.subscribe 
            .content-zone
                .subscribe__wrapper 
        footer.footer 
            .content-zone
                .footer__wrapper 
